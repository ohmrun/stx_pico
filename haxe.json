{
  "version" : "1",
  "build" : {
    "-lib" : [],
    "-cp" : ["src/main/haxe"],
    "unit" : {
      "--macro" : [
        "include('stx.Pico',true)",
        "include('stx.pico',true,['stx.pico.Plugin'])"
      ],
      "interp"  : {
        "--interp" : true
      },
      "cpp"  : {
        "--cpp" : "build/unit/cpp"
      },
      "java"  : {
        "--java" : "build/unit/java"
      }
    },
    "test" : {
      "-lib" : ["stx_test","stx_nano","stx_log"],
      "-main" : "stx.pico.Test",
      "interp" : {
        "--interp" : true
      },
      "hashlink" : {
        "-hl"   : "build/test/hl/main.hl" 
      },
      "js" : {
        "-D"    : ["js-unflatten"],
        "-js"   : "build/test/js/main.js"
      }
    },
    "main" : {
      "-main" : "Main",
      "interp" : {
        "--interp" : true
      }
    },
    "library" : {
      "python" : {
        "stx.pico.Option" : "",
        "-python"   : "build/test/python/main.js"
      }
    }
  },
  "run" : {
    "hashlink"  : [["hl","build/test/hl/main.hl"]],
    "test::js"  : [
      ["hx","build","test/js"]
    ]
  }
}