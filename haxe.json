{
  "version" : "1",
  "build" : {
    "-lib" : ["stx_pico","stx_log"],
    "-cp" : ["src/main/haxe"],
    "unit" : {
      "--macro" : [
        "include('stx.Pico',true)",
        "include('stx.pico',true,['stx.pico.Plugin'])"
      ],
      "interp"  : {
        "--interp" : true
      }
    },
    "test" : {
      "-lib" : ["stx_test","stx_nano"],
      "-main" : "stx.pico.Test",
      "interp" : {
        "--interp" : true
      }
    },
    "main" : {
      "-main" : "Main",
      "hashlink" : {
        "-hl"   : "build/test/hl/main.hl" 
      },
      "javascript:test" : {
        "-D"    : ["js-unflatten","stx.is_library"],
        "-js"   : "build/test/js/main.js"
      },
      "interp" : {
        "--interp" : true
      }
    },
    "library" : {
      "python" : {
        "stx.pico.Option" : "",
        "-python"   : "build/test/python/main.js"
      }
    }
  },
  "run" : {
    "hashlink" : [["hl","build/test/hl/main.hl"]]
  }
}