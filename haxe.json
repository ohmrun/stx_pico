{
  "version": "1",
  "build": {
    "-D": [
      "no-deprecation-warnings"
    ],
    "-lib": [],
    "-cp": [
      "src/main/haxe"
    ],
    "unit": {
      "--macro": [
        "include('stx.Pico',true)",
        "include('stx.pico',true,['stx.pico.Plugin'])"
      ],
      "interp": {
        "--interp": true
      },
      "cpp": {
        "--verbose": true,
        "--cpp": "build/unit/cpp"
      },
      "java": {
        "--java": "build/unit/java"
      },
      "hl": {
        "--hl": "build/unit/hl/main.hl"
      },
      "php": {
        "--php": "build/unit/php"
      },
      "python": {
        "--python": "build/unit/python/main.py"
      },
      "lua": {
        "--lua": "build/unit/lua/main.lua"
      },
      "cs": {
        "--cs": "build/unit/cs"
      },
      "jvm": {
        "--jvm": "build/unit/jvm/main.jar"
      }
    },
    "hashlink" : {
      "--macro": [
        "include('stx.Pico',true)"
      ],
      "-main": "stx.hl.Test",
      "-hl": "build/hashlink/main.hl"
    },  
    "test": {
      "-lib": [
        "stx_test",
        "stx_nano",
      
        "stx_log"
      ],
      "-main": "stx.pico.Test",
      "interp": {
        "--interp": true
      },
      "hl": {
        "-main": "stx.hl.Test",
        "-hl": "build/test/hl/main.hl"
      },
      "js": {
        "-D": [
          "js-unflatten"
        ],
        "-js": "build/test/js/main.js"
      }
    },
    "main": {
      "-main": "Main",
      "interp": {
        "--interp": true
      }
    },
    "library": {
      "python": {
        "stx.pico.Option": "",
        "-python": "build/test/python/main.js"
      }
    }
  },
  "run": {
    "unit": [
      [
        "hx",
        "build",
        "unit/cpp"
      ],
      [
        "hx",
        "build",
        "unit/java"
      ],
      [
        "hx",
        "build",
        "unit/hl"
      ],
      [
        "hx",
        "build",
        "unit/php"
      ],
      [
        "hx",
        "build",
        "unit/python"
      ],
      [
        "hx",
        "build",
        "unit/lua"
      ],
      [
        "hx",
        "build",
        "unit/cs"
      ],
      [
        "hx",
        "build",
        "unit/jvm"
      ]
    ],
    "hashlink": [
      [
        "hl",
        "build/test/hl/main.hl"
      ]
    ],
    "test::js": [
      [
        "hx",
        "build",
        "test/js"
      ]
    ],
    "test::hl": [
      [
        "hx",
        "build",
        "test/hl"
      ],
      [
        "hl",
        "build/test/hl/main.hl"
      ]
    ]
  }
}